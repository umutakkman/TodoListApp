@model TodoListApp.WebApi.Models.ApiModels.CommentWebApiModel

@{
	ViewData["Title"] = "Edit Comment";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditComment" method="post">
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="TaskItemId" />

	<div class="form-group">
		<label asp-for="Text" class="control-label"></label>
		<textarea asp-for="Text" class="form-control" rows="4"></textarea>
		<span asp-validation-for="Text" class="text-danger"></span>
	</div>

	<div class="form-group mt-3">
		<input type="submit" value="Save Changes" class="btn btn-primary" />
		<a asp-action="Edit" asp-route-id="@Model.TaskItemId" class="btn btn-secondary">Cancel</a>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
