@model TodoListApp.WebApi.Models.ApiModels.CommentWebApiModel

@{
	ViewData["Title"] = "Edit Comment";
}

<div class="container my-5">
	<div class="card todo-card shadow border-0">
		<div class="card-header bg-white py-3">
			<div class="d-flex justify-content-between align-items-center">
				<h1 class="card-title fs-3 mb-0">@ViewData["Title"]</h1>
				<a asp-action="Edit" asp-route-id="@Model.TaskItemId" class="btn btn-outline-secondary">
					<i class="bi bi-arrow-left me-1"></i> Back to Task
				</a>
			</div>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-md-8 mx-auto">
					<div class="card bg-light border-0 mb-4">
						<div class="card-body">
							<h5 class="card-title fs-5 mb-3">Comment Information</h5>
							<p class="text-muted mb-0">
								<i class="bi bi-info-circle me-1"></i>
								Update the comment text below and save your changes.
							</p>
						</div>
					</div>

					<form asp-action="EditComment" method="post">
						<input type="hidden" asp-for="Id" />
						<input type="hidden" asp-for="TaskItemId" />

						<div class="form-group mb-4">
							<label asp-for="Text" class="form-label fw-medium">Comment Text</label>
							<textarea asp-for="Text" class="form-control" rows="4" placeholder="Enter your comment"></textarea>
							<span asp-validation-for="Text" class="text-danger"></span>
						</div>

						<div class="form-group d-flex justify-content-between">
							<a asp-action="Edit" asp-route-id="@Model.TaskItemId" class="btn btn-secondary">
								Cancel
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-check-circle me-1"></i> Save Changes
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
