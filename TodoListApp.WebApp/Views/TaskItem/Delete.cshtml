@model TodoListApp.WebApi.Models.ApiModels.TaskItemWebApiModel

@{
	ViewData["Title"] = "Delete Task Item";
}

<div class="container my-5">
	<div class="card todo-card shadow border-0">
		<div class="card-header bg-white py-3">
			<div class="d-flex justify-content-between align-items-center">
				<h1 class="card-title fs-3 mb-0">@ViewData["Title"]</h1>
				<a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" class="btn btn-outline-secondary">
					<i class="bi bi-arrow-left me-1"></i> Back to List
				</a>
			</div>
		</div>
		<div class="card-body">
			<div class="alert alert-danger mb-4">
				<div class="d-flex">
					<i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
					<div>
						<h3 class="alert-heading fs-5 mb-1">Confirm Deletion</h3>
						<p class="mb-0">Are you sure you want to delete this task? This action cannot be undone.</p>
					</div>
				</div>
			</div>

			<div class="card bg-light border-0 mb-4">
				<div class="card-body">
					<h4 class="card-title fs-5 mb-3">Task Details</h4>
					<dl class="row mb-0">
						<dt class="col-sm-3">Title</dt>
						<dd class="col-sm-9 fw-bold">@Model.Title</dd>

						<dt class="col-sm-3">Description</dt>
						<dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</dd>

						<dt class="col-sm-3">Due Date</dt>
						<dd class="col-sm-9">
							<i class="bi bi-calendar-event me-1"></i>
							@Model.DueDate.ToString("MMM dd, yyyy HH:mm")
						</dd>

						<dt class="col-sm-3">Status</dt>
						<dd class="col-sm-9">
							<span class="badge bg-primary">@Model.Status</span>
						</dd>
					</dl>
				</div>
			</div>

			<form asp-action="Delete" method="post">
				<input type="hidden" asp-for="Id" />
				<div class="d-flex justify-content-start">
					<button type="submit" class="btn btn-danger me-2">
						<i class="bi bi-trash me-1"></i> Confirm Delete
					</button>
					<a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>
