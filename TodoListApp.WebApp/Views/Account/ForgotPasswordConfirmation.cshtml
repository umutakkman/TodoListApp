@{
    ViewData["Title"] = "Reset Link Sent";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card todo-card shadow border-0">
                <div class="card-body p-4 p-lg-5 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle p-3 mb-3">
                            <i class="bi bi-envelope-check text-primary fs-1"></i>
                        </div>
                        <h1 class="fs-4 fw-bold">Check Your Email</h1>
                        <p class="text-muted">
                            If an account exists with the email you entered, we've sent a password reset link.
                        </p>
                    </div>
                    
                    <div class="alert alert-light border">
                        <div class="d-flex">
                            <i class="bi bi-info-circle text-primary fs-5 me-2"></i>
                            <div class="text-start small">
                                <p class="mb-1">The email should arrive shortly. Be sure to check your spam folder if you don't see it.</p>
                                <p class="mb-0">If you're still having trouble, try requesting a new reset link or contact support.</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Return to Sign In
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>