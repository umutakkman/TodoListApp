@model TodoListApp.WebApi.Models.ViewModels.RegisterViewModel

@{
	ViewData["Title"] = "Register";
}

<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6 col-xl-5">
			<div class="card todo-card shadow border-0">
				<div class="card-header text-center py-4 bg-white">
					<h1 class="fs-4 fw-bold mb-0">Create an Account</h1>
					<p class="text-muted small mb-0">Sign up to get started with TodoList App</p>
				</div>
				<div class="card-body p-4 p-lg-5">
					<form asp-action="Register" method="post">
						<div class="mb-4">
							<label asp-for="Email" class="form-label">Email Address</label>
							<div class="input-group">
								<span class="input-group-text bg-light border-end-0">
									<i class="bi bi-envelope text-muted"></i>
								</span>
								<input asp-for="Email" class="form-control border-start-0" placeholder="name@example.com" autocomplete="email" />
							</div>
							<span asp-validation-for="Email" class="text-danger small"></span>
						</div>

						<div class="mb-4">
							<label asp-for="Password" class="form-label">Password</label>
							<div class="input-group">
								<span class="input-group-text bg-light border-end-0">
									<i class="bi bi-lock text-muted"></i>
								</span>
								<input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Create a password" />
							</div>
							<span asp-validation-for="Password" class="text-danger small"></span>
							<div class="form-text small">
								Use 8+ characters with a mix of letters, numbers & symbols
							</div>
						</div>

						<div class="mb-4">
							<label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
							<div class="input-group">
								<span class="input-group-text bg-light border-end-0">
									<i class="bi bi-shield-lock text-muted"></i>
								</span>
								<input asp-for="ConfirmPassword" type="password" class="form-control border-start-0" placeholder="Confirm your password" />
							</div>
							<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
						</div>

						<div class="d-grid gap-2 mb-4">
							<button type="submit" class="btn btn-primary btn-lg">
								<i class="bi bi-person-plus me-2"></i>Create Account
							</button>
						</div>

						<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
					</form>

					<div class="text-center mt-4">
						<p class="mb-0 text-muted">
							Already have an account?
							<a asp-action="Login" class="text-primary fw-medium">Sign In</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
