@model TodoListApp.WebApi.Models.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6 col-xl-5">
			<div class="card todo-card shadow border-0">
				<div class="card-header text-center py-4 bg-white">
					<h1 class="fs-4 fw-bold mb-0">Welcome Back</h1>
					<p class="text-muted small mb-0">Sign in to continue to TodoList App</p>
				</div>
				<div class="card-body p-4 p-lg-5">
					<form asp-action="Login" method="post">
						<div class="mb-4">
							<label asp-for="Email" class="form-label">Email Address</label>
							<div class="input-group">
								<span class="input-group-text bg-light border-end-0">
									<i class="bi bi-envelope text-muted"></i>
								</span>
								<input asp-for="Email" class="form-control border-start-0" placeholder="name@example.com" autocomplete="email" />
							</div>
							<span asp-validation-for="Email" class="text-danger small"></span>
						</div>

						<div class="mb-4">
							<div class="d-flex justify-content-between align-items-center">
								<label asp-for="Password" class="form-label">Password</label>
								<a asp-action="ForgotPassword" class="text-primary small text-decoration-none">Forgot password?</a>
							</div>
							<div class="input-group">
								<span class="input-group-text bg-light border-end-0">
									<i class="bi bi-lock text-muted"></i>
								</span>
								<input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Enter your password" />
							</div>
							<span asp-validation-for="Password" class="text-danger small"></span>
						</div>

						<div class="form-check mb-4">
							<input asp-for="RememberMe" class="form-check-input" id="rememberMeCheck" />
							<label asp-for="RememberMe" class="form-check-label small" for="rememberMeCheck">
								Remember me on this device
							</label>
						</div>

						<input type="hidden" asp-for="ReturnUrl" />

						<div class="d-grid gap-2 mb-4">
							<button type="submit" class="btn btn-primary btn-lg">
								<i class="bi bi-box-arrow-in-right me-2"></i>Sign In
							</button>
						</div>

						<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
					</form>

					<div class="text-center mt-4">
						<p class="mb-0 text-muted">
							Don't have an account?
							<a asp-action="Register" class="text-primary fw-medium">Sign Up</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
