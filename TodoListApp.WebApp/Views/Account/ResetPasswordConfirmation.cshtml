@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card todo-card shadow border-0">
                <div class="card-body p-4 p-lg-5 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center bg-success bg-opacity-10 rounded-circle p-3 mb-3">
                            <i class="bi bi-check-circle-fill text-success fs-1"></i>
                        </div>
                        <h1 class="fs-4 fw-bold">Password Reset Successfully</h1>
                        <p class="text-muted">
                            Your password has been updated. You can now sign in with your new password.
                        </p>
                    </div>

                    <div class="alert alert-light border">
                        <div class="d-flex">
                            <i class="bi bi-shield-check text-success fs-5 me-2"></i>
                            <div class="text-start small">
                                <p class="mb-0">For security reasons, you may be asked to verify your identity when signing in on a new device.</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>