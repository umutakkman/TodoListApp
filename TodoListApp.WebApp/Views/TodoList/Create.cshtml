@model TodoListApp.WebApi.Models.ApiModels.TodoListWebApiModel

@{
	ViewData["Title"] = "Create Todo List";
}

<div class="container my-5">
	<div class="card todo-card shadow border-0">
		<div class="card-header bg-white py-3">
			<div class="d-flex justify-content-between align-items-center">
				<h1 class="card-title fs-3 mb-0">@ViewData["Title"]</h1>
				<div>
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="bi bi-arrow-left me-1"></i> Back
					</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<form asp-action="Create">
				<div class="row">
					<div class="col-md-8 col-lg-6 mx-auto">
						<div class="form-group mb-4">
							<label asp-for="Title" class="form-label fw-medium">Title</label>
							<input asp-for="Title" class="form-control form-control-lg" placeholder="Enter a title for your todo list" />
							<span asp-validation-for="Title" class="text-danger"></span>
						</div>

						<div class="form-group mb-4">
							<label asp-for="Description" class="form-label fw-medium">Description</label>
							<textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter an optional description"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>

						<div class="form-group d-grid">
							<button type="submit" class="btn btn-primary btn-lg">
								<i class="bi bi-plus-circle me-1"></i> Create Todo List
							</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
