@model TodoListApp.WebApi.Models.ApiModels.TodoListWebApiModel

@{
	ViewData["Title"] = "Delete Todo List";
}

<div class="container my-5">
	<div class="card todo-card shadow border-0">
		<div class="card-header bg-white py-3">
			<div class="d-flex justify-content-between align-items-center">
				<h1 class="card-title fs-3 mb-0">@ViewData["Title"]</h1>
				<div>
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="bi bi-arrow-left me-1"></i> Back
					</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="alert alert-danger mb-4">
				<h3 class="fs-5">Are you sure you want to delete this todo list?</h3>
				<p class="mb-0">This action cannot be undone.</p>
			</div>

			<div class="card bg-light border-0 mb-4">
				<div class="card-body">
					<h4 class="card-title fs-5 mb-3">Todo List Details</h4>
					<dl class="row mb-0">
						<dt class="col-sm-3 col-md-2">Title</dt>
						<dd class="col-sm-9 col-md-10 fw-bold">@Model.Title</dd>

						<dt class="col-sm-3 col-md-2">Description</dt>
						<dd class="col-sm-9 col-md-10">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</dd>
					</dl>
				</div>
			</div>

			<form asp-action="Delete" method="post">
				<input type="hidden" asp-for="Id" />
				<div class="d-flex justify-content-start">
					<button type="submit" class="btn btn-danger me-2">
						<i class="bi bi-trash me-1"></i> Confirm Delete
					</button>
					<a asp-action="Index" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>
