@model IEnumerable<TodoListApp.WebApi.Models.ApiModels.TaskItemWebApiModel>
@using TodoListApp.Common;

@{
	ViewData["Title"] = "Tasks by Tag";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Any())
{
	<p>No tasks found for this tag.</p>
}
else
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Due Date</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var task in Model)
			{
				<tr class="@(task.DueDate < DateTime.Now ? "table-danger" : "")">
					<td>@task.Title</td>
					<td>@task.DueDate.ToString("yyyy-MM-dd HH:mm")</td>
					<td>@task.Status</td>
					<td>
						<a asp-controller="TaskItem" asp-action="Details" asp-route-id="@task.Id" class="btn btn-info btn-sm">Details</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

<a asp-action="Index" class="btn btn-secondary">Back to All Tags</a>
