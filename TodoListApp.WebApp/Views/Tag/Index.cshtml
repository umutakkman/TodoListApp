@model IEnumerable<TodoListApp.WebApi.Models.ViewModels.TagIndexViewModel>

@{
	ViewData["Title"] = "All Tags";
}

<div class="container my-5">
	<div class="card shadow-sm border-0">
		<div class="card-header bg-white border-bottom">
			<h1 class="card-title mb-0">@ViewData["Title"]</h1>
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Tag Name</th>
						<th scope="col">Task Count</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Tag.Name</td>
							<td>@item.TaskCount</td>
							<td>
								<a asp-action="TasksByTag"
								   asp-route-tagId="@item.Tag.Id"
								   class="btn btn-outline-primary">
									View Tasks
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
